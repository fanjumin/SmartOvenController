        //         function onBakingModeChange() {





            const modeSelect = document.getElementById('baking-mode-select');





            const selectedMode = modeSelect.value;





            const preset = bakingPresets[selectedMode];





            





            if (preset) {





                // 温度                document.getElementById('target-temp').value = preset.temperature;





                document.getElementById('baking-time').value = preset.time;





                





                //                 targetTemperature = preset.temperature;





                bakingTime = preset.time;





                bakingMode = selectedMode;





                





                if (selectedMode === 'custom') {





                    showToast(getTranslation('switchedToCustomMode'));





                } else {





                    showToast(getTranslation('switchedToPresetMode', {name: preset.name, temperature: preset.temperature, time: preset.time}));





                }





            }





        }











        // 温度        function validateTemperature() {





            const tempInput = document.getElementById('target-temp');





            const temp = parseInt(tempInput.value);





            





            if (temp >= 50 && temp </span><= 250) {





                targetTemperature = temp;





                //                 if (controlMode === 'auto') {





                    bakingMode = 'custom'; //                     document.getElementById('baking-mode-select').value = 'custom';





                }





                return true;





            } else {





                showToast(getTranslation('tempRangeMessage', {min: config.minTemp, max: config.maxTemp}));





                tempInput.value = targetTemperature; //                 return false;





            }





        }











        //         function validateTime() {





            const timeInput = document.getElementById('baking-time');





            const time = parseInt(timeInput.value);





            





            if (time >= 1 && time <= 120) {





                bakingTime = time;





                //                 if (controlMode === 'auto') {





                    bakingMode = 'custom'; //                     document.getElementById('baking-mode-select').value = 'custom';





                }





                return true;





            } else {





                showToast(getTranslation('timeRangeMessage', {min: config.minTime, max: config.maxTime}));





                timeInput.value = bakingTime; //                 return false;





            }





        }











