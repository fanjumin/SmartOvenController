        // 温度        function changeTemp(delta) {











            const newTemp = deviceStatus.targetTemp + delta;











            if (newTemp >= 0 && newTemp </span><= 300) {











                setTargetTemp(newTemp);











            } else {











                alert(getTranslation('tempRangeRequired', {min: config.minTemp, max: config.maxTemp}));











            }











        }























        // 设置        async function setTargetTemp(temp) {











            try {











                const response = await fetch('/control', {











                    method: 'POST',











                    headers: {











                        'Content-Type': 'application/json',











                    },











                    body: JSON.stringify({











                        target_temperature: temp











                    })











                });











                











                if (response.ok) {











                    refreshData();











                } else {











                    alert('温度设置失败');











                }











            } catch (error) {











                console.error('设置温度失败:', error);











                alert('            }











        }























