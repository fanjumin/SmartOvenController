        // å¿«é€Ÿ设置æ¸©åº¦

        async function quickSetTemp(temp) {

            try {

                const response = await fetch('/control', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        target_temperature: temp

                    })

                });

                

                if (response.ok) {

                    refreshData();

                } else {

                    alert(getTranslation('tempSettingFailed'))

                }

            } catch (error) {

                console.error('设置æ¸©åº¦å¤±è´¥:', error);

                alert('ç½‘ç»œè¿�æ�¥å¤±è´¥');

            }

        }



