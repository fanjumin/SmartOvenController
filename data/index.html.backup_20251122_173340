        // é‡�å�¯设备

        async function restartDevice() {

            const confirmed = confirm(getTranslation('confirmRestart'));

            if (!confirmed) return;

            

            try {

                const response = await fetch('/restart', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    }

                });

                

                if (response.ok) {

                    alert('设备é‡�å�¯å‘½ä»¤å·²å�‘é€�ï¼Œ设备å°†åœ¨å‡ ç§’é’Ÿå��é‡�å�¯ã€‚');

                    // 显示é‡�å�¯æ��ç¤º

                    showRestartMessage();

                } else {

                    alert('é‡�å�¯å‘½ä»¤å�‘é€�å¤±è´¥');

                }

            } catch (error) {

                console.error('é‡�å�¯设备å¤±è´¥:', error);

                alert('ç½‘ç»œè¿�æ�¥å¤±è´¥ï¼Œæ— æ³•é‡�å�¯设备');

            }

        }

        

        // 显示é‡�å�¯æ��ç¤º

        function showRestartMessage() {

            const messageDiv = document.createElement('div');

            messageDiv.style.cssText = `

                position: fixed;

                top: 50%;

                left: 50%;

                transform: translate(-50%, -50%);

                background: rgba(0, 0, 0, 0.9);

                color: white;

                padding: 30px;

                border-radius: 15px;

                text-align: center;

                z-index: 1000;

                font-size: 16px;

                max-width: 300px;

            `;

            messageDiv.innerHTML = `
                <div style="font-size: 24px; margin-bottom: 15px;">ğŸ”„</div>
                <div style="font-weight: 600; margin-bottom: 10px;"><span data-lang="deviceRebooting">设备æ­£åœ¨é‡�å�¯</span></div>
                <div style="font-size: 14px; opacity: 0.8;">
                    <span data-lang="deviceRebooting">设备æ­£åœ¨é‡�å�¯</span>ï¼Œè¯·ç­‰å¾…å‡ 分钟å��é‡�æ–°è¿�æ�¥ã€‚
                </div>
            `;

            document.body.appendChild(messageDiv);

            

            // 5ç§’å��è‡ªåŠ¨åˆ·æ–°é¡µé�¢

            setTimeout(() => {

                window.location.reload();

            }, 5000);

        }

        

        // æ�¢å¤�å‡ºå�‚设置

        async function factoryReset() {

            const confirmed = confirm(getTranslation('confirmFactoryReset'));

            if (!confirmed) return;

            

            const password = prompt(getTranslation('enterAdminPassword'));

            if (!password) return;

            

            try {

                const response = await fetch('/factoryreset', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        password: password

                    })

                });

                

                if (response.ok) {

                    alert(getTranslation('factoryResetComplete'));

                    // 显示æ�¢å¤�å‡ºå�‚设置æ��ç¤º

                    showFactoryResetMessage();

                } else {

                    alert(getTranslation('factoryResetFailedInvalidPassword'));

                }

            } catch (error) {

                console.error('æ�¢å¤�å‡ºå�‚设置å¤±è´¥:', error);

                alert(getTranslation('networkFailedFactoryReset'));

            }

        }

        

        // 显示æ�¢å¤�å‡ºå�‚设置æ��ç¤º
        function showFactoryResetMessage() {
            const messageDiv = document.createElement('div');
            messageDiv.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: rgba(0, 0, 0, 0.9);
                color: white;
                padding: 30px;
                border-radius: 15px;
                text-align: center;
                z-index: 1000;
                font-size: 16px;
                max-width: 300px;
            `;
            messageDiv.innerHTML = `
                <div style="font-size: 24px; margin-bottom: 15px;">âš ï¸�</div>
                <div style="font-weight: 600; margin-bottom: 10px;"><span data-lang="factoryResetInProgress"><span data-lang="factoryReset">设备æ­£åœ¨æ�¢å¤�å‡ºå�‚设置</span></span></div>
                <div style="font-size: 14px; opacity: 0.8;">
                    æ‰€æœ‰设置将被清除ï¼Œ设备å°†é‡�å�¯å¹¶æ�¢å¤�å‡ºå�‚状态�ã€‚
                </div>
            `;
            document.body.appendChild(messageDiv);
            
            // 5ç§’å��è‡ªåŠ¨åˆ·æ–°é¡µé�¢
            setTimeout(() => {
                window.location.reload();
            }, 5000);
        }

        // åŠ çƒ­æ�§åˆ¶åŠŸèƒ½
        let currentTemperature = 0;

        // åˆ‡æ�¢åˆ°è‡ªåŠ¨æ¨¡å¼�
        function switchToAutoMode() {
            controlMode = 'auto';
            
            // æ›´æ–°æŒ‰é’®状态�
            document.getElementById('auto-mode-btn').classList.add('active');
            document.getElementById('manual-mode-btn').classList.remove('active');
            
            // 显示è‡ªåŠ¨æ¨¡å¼�éƒ¨åˆ†ï¼Œéš�è—�æ‰‹åŠ¨æ¨¡å¼�éƒ¨åˆ†
            document.getElementById('auto-mode-section').style.display = 'block';
            document.getElementById('manual-mode-section').style.display = 'none';
            
            // å¦‚æ�œå½“å‰�æ˜¯è‡ªå®šä¹‰æ¨¡å¼�ï¼Œåˆ‡æ�¢å›�æ ‡å‡†æ¨¡å¼�
            const modeSelect = document.getElementById('baking-mode-select');
            if (modeSelect.value === 'custom') {
                modeSelect.value = 'bread';
                onBakingModeChange();
            }
            
            showToast(getTranslation('switchedToAutoMode'))
        }

        // åˆ‡æ�¢åˆ°æ‰‹åŠ¨æ¨¡å¼�
        function switchToManualMode() {
            controlMode = 'manual';
            
            // æ›´æ–°æŒ‰é’®状态�
            document.getElementById('manual-mode-btn').classList.add('active');
            document.getElementById('auto-mode-btn').classList.remove('active');
            
            // 显示æ‰‹åŠ¨æ¨¡å¼�éƒ¨åˆ†ï¼Œéš�è—�è‡ªåŠ¨æ¨¡å¼�éƒ¨åˆ†
            document.getElementById('manual-mode-section').style.display = 'block';
            document.getElementById('auto-mode-section').style.display = 'none';
            
            // 设置æ‰‹åŠ¨æ¨¡å¼�çš„é»˜è®¤å€¼ï¼ˆé��é›¶å€¼ï¼‰
            document.getElementById('target-temp').value = config.defaultTemp;
            document.getElementById('baking-time').value = config.defaultTime;
            targetTemperature = 180;
            bakingTime = 30;
            
            showToast(getTranslation('switchedToManualMode'))
        }

        // çƒ˜ç„™æ¨¡å¼�é€‰æ‹©å�˜åŒ–å¤„ç�†
        function onBakingModeChange() {
            const modeSelect = document.getElementById('baking-mode-select');
            const selectedMode = modeSelect.value;
            const preset = bakingPresets[selectedMode];
            
            if (preset) {
                // æ›´æ–°æ¸©åº¦å’Œæ—¶é—´è¾“å…¥æ¡†
                document.getElementById('target-temp').value = preset.temperature;
                document.getElementById('baking-time').value = preset.time;
                
                // æ›´æ–°å…¨å±€å�˜é‡�
                targetTemperature = preset.temperature;
                bakingTime = preset.time;
                bakingMode = selectedMode;
                
                if (selectedMode === 'custom') {
                    showToast(getTranslation('switchedToCustomMode'));
                } else {
                    showToast(getTranslation('switchedToPresetMode', {name: preset.name, temperature: preset.temperature, time: preset.time}));
                }
            }
        }

        // æ¸©åº¦è¾“å…¥éªŒè¯�
        function validateTemperature() {
            const tempInput = document.getElementById('target-temp');
            const temp = parseInt(tempInput.value);
            
            if (temp >= 50 && temp <= 250) {
                targetTemperature = temp;
                // å�ªæœ‰åœ¨è‡ªåŠ¨æ¨¡å¼�ä¸‹手动调整æ—¶æ‰�åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                if (controlMode === 'auto') {
                    bakingMode = 'custom'; // 手动调整æ—¶åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                    document.getElementById('baking-mode-select').value = 'custom';
                }
                return true;
            } else {
                showToast(getTranslation('tempRangeMessage', {min: config.minTemp, max: config.maxTemp}));
                tempInput.value = targetTemperature; // æ�¢å¤�å�Ÿå€¼
                return false;
            }
        }

        // æ—¶é—´è¾“å…¥éªŒè¯�
        function validateTime() {
            const timeInput = document.getElementById('baking-time');
            const time = parseInt(timeInput.value);
            
            if (time >= 1 && time <= 120) {
                bakingTime = time;
                // å�ªæœ‰åœ¨è‡ªåŠ¨æ¨¡å¼�ä¸‹手动调整æ—¶æ‰�åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                if (controlMode === 'auto') {
                    bakingMode = 'custom'; // 手动调整æ—¶åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                    document.getElementById('baking-mode-select').value = 'custom';
                }
                return true;
            } else {
                showToast(getTranslation('timeRangeMessage', {min: config.minTime, max: config.maxTime}));
                timeInput.value = bakingTime; // æ�¢å¤�å�Ÿå€¼
                return false;
            }
        }

        // æ¸©åº¦è¾“å…¥æ¡†å¤±å�»ç„¦ç‚¹æ—¶éªŒè¯�
        function onTemperatureBlur() {
            validateTemperature();
        }

        // æ—¶é—´è¾“å…¥æ¡†å¤±å�»ç„¦ç‚¹æ—¶éªŒè¯�
        function onTimeBlur() {
            validateTime();
        }

        // å½“åœ¨æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ›´æ”¹æ¸©åº¦æ—¶çš„å¤„ç�†
        function onManualTemperatureChange(element) {
            // å�ªæœ‰åœ¨æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ‰�æ›´æ–°æ¸©åº¦å€¼
            if (controlMode === 'manual') {
                targetTemperature = parseInt(element.value) || 0;
            } else if (controlMode === 'auto') {
                // åœ¨è‡ªåŠ¨æ¨¡å¼�ä¸‹ï¼Œå¦‚æ�œç”¨æˆ·ä¿®æ”¹äº†é¢„è®¾å€¼ï¼Œåˆ™è‡ªåŠ¨åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                const modeSelect = document.getElementById('baking-mode-select');
                if (modeSelect.value !== 'custom') {
                    modeSelect.value = 'custom';
                    onBakingModeChange();
                }
                targetTemperature = parseInt(element.value) || 0;
            }
        }

        // å½“åœ¨æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ›´æ”¹æ—¶é—´æ—¶çš„å¤„ç�†
        function onManualTimeChange(element) {
            // å�ªæœ‰åœ¨æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ‰�æ›´æ–°æ—¶é—´å€¼
            if (controlMode === 'manual') {
                bakingTime = parseInt(element.value) || 0;
            } else if (controlMode === 'auto') {
                // åœ¨è‡ªåŠ¨æ¨¡å¼�ä¸‹ï¼Œå¦‚æ�œç”¨æˆ·ä¿®æ”¹äº†é¢„è®¾å€¼ï¼Œåˆ™è‡ªåŠ¨åˆ‡æ�¢åˆ°è‡ªå®šä¹‰æ¨¡å¼�
                const modeSelect = document.getElementById('baking-mode-select');
                if (modeSelect.value !== 'custom') {
                    modeSelect.value = 'custom';
                    onBakingModeChange();
                }
                bakingTime = parseInt(element.value) || 0;
            }
        }

        // æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ¸©åº¦è¾“å…¥æ¡†å¤±å�»ç„¦ç‚¹æ—¶çš„å¤„ç�†
        function onManualTemperatureBlur() {
            if (controlMode === 'manual') {
                validateTemperature();
            }
        }

        // æ‰‹åŠ¨æ¨¡å¼�ä¸‹æ—¶é—´è¾“å…¥æ¡†å¤±å�»ç„¦ç‚¹æ—¶çš„å¤„ç�†
        function onManualTimeBlur() {
            if (controlMode === 'manual') {
                validateTime();
            }
        }

        async function toggleHeating() {
            const toggleBtn = document.getElementById('heating-toggle');
            const heatingIcon = toggleBtn.querySelector('.heating-icon');
            const heatingText = toggleBtn.querySelector('.heating-text');
            
            isHeating = !isHeating;
            
            try {
                if (isHeating) {
                    toggleBtn.style.background = 'linear-gradient(135deg, #10b981, #059669)';
                    heatingIcon.textContent = 'â�„ï¸�';
                    heatingText.textContent = getTranslation('stopHeating');
                    
                    // æ ¹æ�®å½“å‰�æ¨¡å¼�显示ä¸�å�Œçš„æ��ç¤ºä¿¡æ�¯
                    if (controlMode === 'manual') {
                        showToast(getTranslation('startManualHeating', {temperature: targetTemperature, time: bakingTime}));
                    } else {
                        const modeSelect = document.getElementById('baking-mode-select');
                        const selectedMode = modeSelect.value;
                        const preset = bakingPresets[selectedMode];
                        if (preset) {
                            showToast(`开始加热到 ${targetTemperature}Â°Cï¼ŒæŒ�ç»­ ${bakingTime} 分钟 (${preset.name}æ¨¡å¼�)`);
                        } else {
                            showToast(`开始加热到 ${targetTemperature}Â°Cï¼ŒæŒ�ç»­ ${bakingTime} 分钟`);
                        }
                    }
                    // å�‘é€�å�¯åŠ¨åŠ çƒ­çš„è¯·æ±‚åˆ°设备
                    const response = await fetch('/control', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            heating_enabled: true,
                            target_temperature: targetTemperature,
                            oven_mode: bakingMode
                        })
                    });

                    if (!response.ok) {
                        throw new Error('å�¯åŠ¨åŠ çƒ­å¤±è´¥');
                    }
                    
                    refreshData();
                } else {
                    toggleBtn.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                    heatingIcon.textContent = 'ğŸ”¥';
                    heatingText.textContent = getTranslation('startHeating');
                    showToast(getTranslation('heatingStopped'))
                    // å�‘é€�å�œæ­¢åŠ çƒ­çš„è¯·æ±‚åˆ°设备
                    const response = await fetch('/control', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            heating_enabled: false,
                            oven_mode: bakingMode
                        })
                    });

                    if (!response.ok) {
                        throw new Error('å�œæ­¢åŠ çƒ­å¤±è´¥');
                    }
                    
                    refreshData();
                }
            } catch (error) {
                console.error('æ�§åˆ¶设备å¤±è´¥:', error);
                alert('ç½‘ç»œè¿�æ�¥å¤±è´¥');
                // æ�¢å¤�状态�
                isHeating = !isHeating;
            }
        }

        // ç§»åŠ¨ç«¯ä¼˜åŒ–åŠŸèƒ½
        
        // é€€å‡ºç™»å½•
        async function logout() {
            if (confirm(getTranslation('confirmLogout'))) {
                try {
                    const response = await fetch(apiEndpoints.logout, {
                        method: 'POST'
                    });
                    
                    if (response.ok) {
                        window.location.href = apiEndpoints.login;
                    } else {
                        alert(getTranslation('logoutFailed'));
                    }
                } catch (error) {
                    console.error('é€€å‡ºç™»å½•å¤±è´¥:', error);
                    alert('ç½‘ç»œè¿�æ�¥å¤±è´¥');
                }
            }
        }
        
        // ä¿®æ”¹å¯†ç �
        async function changePassword() {
            const oldPassword = prompt('è¯·è¾“å…¥å½“å‰�å¯†ç �ï¼š');
            if (!oldPassword) return;

            const newPassword = prompt('è¯·è¾“å…¥æ–°å¯†ç �ï¼š');
            if (!newPassword) return;

            const confirmPassword = prompt('è¯·ç¡®è®¤æ–°å¯†ç �ï¼š');
            if (!confirmPassword) return;

            if (newPassword !== confirmPassword) {
                alert('æ–°å¯†ç �è¾“å…¥ä¸�ä¸€è‡´');
                return;
            }

            try {
                const response = await fetch(apiEndpoints.changePassword, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        old_password: oldPassword,
                        new_password: newPassword
                    })
                });

                if (response.ok) {
                    alert(getTranslation('passwordChangeSuccess'));
                } else {
                    alert(getTranslation('passwordChangeFailed'));
                }
            } catch (error) {
                console.error('ä¿®æ”¹å¯†ç �å¤±è´¥:', error);
                alert('ç½‘ç»œè¿�æ�¥å¤±è´¥');
            }
        }

        
        
        // ç§»åŠ¨ç«¯è§¦æ‘¸äº‹ä»¶å¤„ç�†
        let touchStartX = 0;
        let touchStartY = 0;
        
        document.addEventListener('touchstart', function(e) {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        }, { passive: true });
        
        document.addEventListener('touchend', function(e) {
            const touchEndX = e.changedTouches[0].clientX;
            const touchEndY = e.changedTouches[0].clientY;
            
            const deltaX = touchEndX - touchStartX;
            const deltaY = touchEndY - touchStartY;
            
            // æ°´å¹³æ»‘åŠ¨è¶…è¿‡50pxä¸”å�‚ç›´æ»‘åŠ¨å°�äº�30pxæ—¶è§¦å�‘åˆ·æ–°
            if (Math.abs(deltaX) > 50 && Math.abs(deltaY) < 30) {
                if (deltaX > 0) {
                    // å�‘å�³æ»‘åŠ¨ - åˆ·æ–°æ•°æ�®
                    refreshData();
                    showToast('æ•°æ�®å·²åˆ·æ–°');
                }
            }
        }, { passive: true });
        
        // 显示Toastæ��ç¤º
        function showToast(message) {
            const toast = document.createElement('div');
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 12px 24px;
                border-radius: 25px;
                font-size: 14px;
                z-index: 1000;
                animation: slideDown 0.3s ease;
            `;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 2000);
        }
        
        // æ·»åŠ CSSåŠ¨ç”»
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideDown {
                from {
                    transform: translateX(-50%) translateY(-20px);
                    opacity: 0;
                }
                to {
                    transform: translateX(-50%) translateY(0);
                    opacity: 1;
                }
            }

            @keyframes highlight {
                0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
                50% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
                100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
            }
            
            /* ç§»åŠ¨ç«¯æŒ‰é’®ç‚¹å‡»æ•ˆæ�œ */
            .control-btn:active, .nav-card:active {
                transform: scale(0.95);
                transition: transform 0.1s;
            }
            
            /* ç§»åŠ¨ç«¯ä¼˜åŒ–æ»šåŠ¨ */
            body {
                -webkit-overflow-scrolling: touch;
            }
        `;
        document.head.appendChild(style);

    </script>

</body>

