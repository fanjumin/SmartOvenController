            <script>

        // 璁惧鐘舵€佸彉閲?

        let deviceStatus = {

            currentTemp: 0,

            targetTemp: 180,

            heatingEnabled: false,

            wifiConnected: false,

            wifiSSID: '',

            ipAddress: '',

            deviceId: '',

            firmwareVersion: ''

        };



        // 椤甸潰鍔犺浇瀹屾垚鍚庡垵濮嬪寲

        document.addEventListener('DOMContentLoaded', function() {

            console.log('鏅鸿兘鐢电儰绠辩鐞嗗憳椤甸潰宸插姞杞?);

            refreshData();

            

            // 姣?绉掕嚜鍔ㄥ埛鏂版暟鎹?

            setInterval(refreshData, 5000);

            

            // 鍒濆鍖栨枃浠堕€夋嫨浜嬩欢
            const firmwareFileInput = document.getElementById('firmware-file');
            if (firmwareFileInput) {
                firmwareFileInput.addEventListener('change', handleFileSelect);
            }
            
            // 鍒濆鍖栨枃浠剁郴缁熸枃浠堕€夋嫨浜嬩欢
            const filesystemFileInput = document.getElementById('filesystem-file');
            if (filesystemFileInput) {
                filesystemFileInput.addEventListener('change', handleFilesystemFileSelect);
            }
            
            // 鍒濆鍖栫儤鐒欐帶鍒舵ā寮?
            switchToAutoMode(); // 榛樿杩涘叆鑷姩妯″紡

        });



        // 鍒锋柊璁惧鏁版嵁

        async function refreshData() {

            try {

                const response = await fetch('/status');

                if (response.ok) {

                    const data = await response.json();

                    updateStatusDisplay(data);

                } else {

                    console.error('鑾峰彇璁惧鐘舵€佸け璐?);

                    showDemoData();

                }

            } catch (error) {

                console.error('缃戠粶杩炴帴澶辫触:', error);

                showDemoData();

            }

        }



        // 鏇存柊鐘舵€佹樉绀?





        // 鏄剧ず婕旂ず鏁版嵁锛堢綉缁滆繛鎺ュけ璐ユ椂锛?
        function showDemoData() {
            const demoData = {
                temperature: 25.0,
                target_temperature: 180.0,
                heating_enabled: false,
                wifi_connected: true,
                wifiSSID: 'SmartOven_AP',
                ip_address: '192.168.4.1',
                device_id: 'SmartOven_001',
                firmware_version: '0.8.5'
            };

            

            const connectionStatus = document.querySelector('.connection-status');
            const statusText = connectionStatus ? connectionStatus.querySelector('.status-text') : null;

            if (statusText) {
                statusText.textContent = '婕旂ず妯″紡';
                statusText.style.color = '#f59e0b';
            }

            updateStatusDisplay(demoData);

        }



        // 鍒囨崲鍔犵儹鐘舵€?

        async function toggleHeating() {

            try {

                const response = await fetch('/control', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        heating_enabled: !deviceStatus.heatingEnabled

                    })

                });

                

                if (response.ok) {

                    refreshData();

                } else {

                    alert('鎺у埗鍛戒护鍙戦€佸け璐?);

                }

            } catch (error) {

                console.error('鎺у埗璁惧澶辫触:', error);

                alert('缃戠粶杩炴帴澶辫触');

            }

        }



        // 蹇€熻缃俯搴?

        async function quickSetTemp(temp) {

            try {

                const response = await fetch('/control', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        target_temperature: temp

                    })

                });

                

                if (response.ok) {

                    refreshData();

                } else {

                    alert('娓╁害璁剧疆澶辫触');

                }

            } catch (error) {

                console.error('璁剧疆娓╁害澶辫触:', error);

                alert('缃戠粶杩炴帴澶辫触');

            }

        }



        // 閲嶅惎璁惧

        async function restartDevice() {

            if (confirm('纭畾瑕侀噸鍚澶囧悧锛熻澶囧皢鍦?绉掑悗閲嶅惎銆?)) {

                try {

                    const response = await fetch('/restart', {

                        method: 'POST'

                    });

                    

                    if (response.ok) {

                        alert('璁惧閲嶅惎鍛戒护宸插彂閫侊紝璇风瓑寰呯害30绉掑悗閲嶆柊杩炴帴');

                    } else {

                        alert('閲嶅惎鍛戒护鍙戦€佸け璐?);

                    }

                } catch (error) {

                    console.error('閲嶅惎璁惧澶辫触:', error);

                    alert('缃戠粶杩炴帴澶辫触');

                }

            }

        }



        // 鎭㈠鍑哄巶璁剧疆

        async function factoryReset() {

            if (confirm('纭畾瑕佹仮澶嶅嚭鍘傝缃悧锛熸墍鏈夐厤缃皢琚竻闄わ紝璁惧灏嗛噸鍚€?)) {

                try {

                    const response = await fetch('/factoryreset', {

                        method: 'POST'

                    });

                    

                    if (response.ok) {

                        alert('鎭㈠鍑哄巶璁剧疆鍛戒护宸插彂閫侊紝璁惧灏嗛噸鍚苟杩涘叆閰嶇綉妯″紡');

                    } else {

                        alert('鎭㈠鍑哄巶璁剧疆鍛戒护鍙戦€佸け璐?);

                    }

                } catch (error) {

                    console.error('鎭㈠鍑哄巶璁剧疆澶辫触:', error);

                    alert('缃戠粶杩炴帴澶辫触');

                }

            }

        }



        







        // 澶勭悊鏂囦欢閫夋嫨

        

        



        



        // 鏇存柊鍥轰欢鐗堟湰鏄剧ず

        function updateFirmwareDisplay() {

            const firmwareElement = document.getElementById('current-firmware');

            if (firmwareElement && deviceStatus.firmwareVersion) {

                firmwareElement.textContent = deviceStatus.firmwareVersion;

            }

        }



        // 鍦ㄧ姸鎬佹洿鏂版椂涔熸洿鏂板浐浠剁増鏈樉绀?

        function updateStatusDisplay(data) {

            deviceStatus = {

                currentTemp: data.temperature || 0,

                targetTemp: data.target_temperature || 180,

                heatingEnabled: data.heating_enabled || false,

                wifiConnected: data.wifi_connected || false,

                wifiSSID: data.wifi_ssid || '',

                ipAddress: data.ip_address || '',

                deviceId: data.device_id || '',

                firmwareVersion: data.firmware_version || ''

            };



            // 瀹夊叏鍦版洿鏂版俯搴︽樉绀?

            const statusItems = document.querySelectorAll('.status-item');

            if (statusItems.length >= 4) {

                statusItems[0].querySelector('.status-value').textContent = 

                    deviceStatus.currentTemp.toFixed(1) + '掳C';

                statusItems[1].querySelector('.status-value').textContent = 

                    deviceStatus.targetTemp.toFixed(1) + '掳C';

                

                // 鏇存柊鍔犵儹鐘舵€?

                const heatingStatus = deviceStatus.heatingEnabled ? '鍔犵儹涓? : '宸插仠姝?;

                statusItems[2].querySelector('.status-value').textContent = heatingStatus;

                statusItems[2].querySelector('.status-value').style.color = 

                    deviceStatus.heatingEnabled ? '#10b981' : '#6b7280';

                

                // 鏇存柊WiFi鐘舵€?

                const wifiStatus = deviceStatus.wifiConnected ? (deviceStatus.wifiSSID || '宸茶繛鎺?) : '鏈繛鎺?;

                statusItems[3].querySelector('.status-value').textContent = wifiStatus;

                statusItems[3].querySelector('.status-value').style.color = 

                    deviceStatus.wifiConnected ? '#10b981' : '#ef4444';

            }

            

            // 鏇存柊鍥轰欢鐗堟湰鏄剧ず

            updateFirmwareDisplay();

            

            // 鏇存柊娓╁害鎺у埗闈㈡澘鏄剧ず

            updateTemperatureControlDisplay();

        }



        // 鏇存柊娓╁害鎺у埗闈㈡澘鏄剧ず

        function updateTemperatureControlDisplay() {

            // 鏇存柊褰撳墠娓╁害鏄剧ず

            const currentTempDisplay = document.getElementById('current-temp-display');

            if (currentTempDisplay) {

                currentTempDisplay.textContent = deviceStatus.currentTemp.toFixed(1) + '掳C';

            }

            

            // 鏇存柊鐩爣娓╁害鏄剧ず

            const targetTempDisplay = document.getElementById('target-temp-display');

            if (targetTempDisplay) {

                targetTempDisplay.textContent = deviceStatus.targetTemp.toFixed(1) + '掳C';

            }

            

            // 鏇存柊鍔犵儹鎸夐挳鐘舵€?

            const heatingBtn = document.getElementById('heating-btn');

            if (heatingBtn) {

                heatingBtn.textContent = deviceStatus.heatingEnabled ? '鍏抽棴鍔犵儹' : '寮€鍚姞鐑?;

                heatingBtn.className = deviceStatus.heatingEnabled ? 

                    'btn btn-secondary' : 'btn btn-primary';

            }

            

            // 鏇存柊鍔犵儹鐘舵€佹寚绀哄櫒

            const heatingStatus = document.getElementById('heating-status');

            if (heatingStatus) {

                if (deviceStatus.heatingEnabled) {

                    heatingStatus.textContent = '鍔犵儹鍣ㄦ鍦ㄥ伐浣?;

                    heatingStatus.className = 'status-indicator status-heating';

                } else {

                    heatingStatus.textContent = '鍔犵儹鍣ㄥ凡鍏抽棴';

                    heatingStatus.className = 'status-indicator status-idle';

                }

            }

        }



        // 娓╁害璋冭妭鍔熻兘

        function changeTemp(delta) {

            const newTemp = deviceStatus.targetTemp + delta;

            if (newTemp >= 0 && newTemp <= 300) {

                setTargetTemp(newTemp);

            } else {

                alert('娓╁害鑼冨洿蹇呴』鍦?0掳C 鍒?300掳C 涔嬮棿');

            }

        }



        // 璁剧疆鐩爣娓╁害

        async function setTargetTemp(temp) {

            try {

                const response = await fetch('/control', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        target_temperature: temp

                    })

                });

                

                if (response.ok) {

                    refreshData();

                } else {

                    alert('娓╁害璁剧疆澶辫触');

                }

            } catch (error) {

                console.error('璁剧疆娓╁害澶辫触:', error);

                alert('缃戠粶杩炴帴澶辫触');

            }

        }



        // 棰勮娓╁害璁剧疆

        function setPresetTemp(temp) {

            setTargetTemp(temp);

        }



        // 搴旂敤鐩存帴杈撳叆鐨勬俯搴?

        function applyTemperature() {

            const tempInput = document.getElementById('temp-input');

            if (tempInput && tempInput.value) {

                const temp = parseInt(tempInput.value);

                if (temp >= 0 && temp <= 300) {

                    setTargetTemp(temp);

                    tempInput.value = ''; // 娓呯┖杈撳叆妗?

                } else {

                    alert('璇疯緭鍏?0掳C 鍒?300掳C 涔嬮棿鐨勬俯搴﹀€?);

                }

            } else {

                alert('璇峰厛杈撳叆瑕佽缃殑娓╁害');

            }

        }







        // 鏇存柊璁惧鐘舵€佹樉绀?
        function updateStatusDisplay(data) {
            deviceStatus = {
                currentTemp: data.temperature || 0,
                targetTemp: data.target_temperature || 180,
                heatingEnabled: data.heating_enabled || false,
                wifiConnected: data.wifi_connected || false,
                wifiSSID: data.wifi_ssid || '',
                ipAddress: data.ip_address || '',
                deviceId: data.device_id || '',
                firmwareVersion: data.firmware_version || '',
                calibration: data.calibration || { offset: 0, scale: 1.0 }
            };

            // 瀹夊叏鍦版洿鏂扮姸鎬佹樉绀?
            const statusItems = document.querySelectorAll('.status-item');

            if (statusItems.length >= 4) {
                // 鏇存柊褰撳墠娓╁害
                statusItems[0].querySelector('.status-value').textContent = 
                    deviceStatus.currentTemp.toFixed(1) + '掳C';
                
                // 鏇存柊鍔犵儹鐘舵€?
                const heatingStatus = deviceStatus.heatingEnabled ? '鍔犵儹涓? : '宸插仠姝?;
                statusItems[1].querySelector('.status-value').textContent = heatingStatus;
                statusItems[1].querySelector('.status-value').style.color = 
                    deviceStatus.heatingEnabled ? '#10b981' : '#6b7280';
                
                // 鏇存柊WiFi鐘舵€?- 鏄剧ず瀹為檯WiFi鍚嶇О
                const wifiStatus = deviceStatus.wifiConnected ? (deviceStatus.wifiSSID || '宸茶繛鎺?) : '鏈繛鎺?;
                statusItems[2].querySelector('.status-value').textContent = wifiStatus;
                statusItems[2].querySelector('.status-value').style.color = 
                    deviceStatus.wifiConnected ? '#10b981' : '#ef4444';
                
                // 鏇存柊IP鍦板潃
                statusItems[3].querySelector('.status-value').textContent = 
                    deviceStatus.ipAddress || '--';
            }

            // 鏇存柊椤堕儴杩炴帴鐘舵€佹樉绀?
            const connectionStatus = document.querySelector('.connection-status');
            const statusDot = connectionStatus.querySelector('.status-dot');
            const statusText = connectionStatus.querySelector('.status-text');
            
            if (deviceStatus.wifiConnected) {
                statusDot.className = 'status-dot live';
                statusText.textContent = '宸茶繛鎺?;
                statusText.style.color = '#10b981';
            } else {
                statusDot.className = 'status-dot';
                statusText.textContent = '鏈繛鎺?;
                statusText.style.color = '#ef4444';
            }

            

            // 鏇存柊鍥轰欢鐗堟湰鏄剧ず

            updateFirmwareDisplay();

            

            // 鏇存柊娓╁害鎺у埗闈㈡澘鏄剧ず
            updateTemperatureControlDisplay();
            
            // 鏇存柊鏍″噯鏄剧ず
            updateCalibrationDisplay();

        }

        // 鏇存柊鏍″噯鏄剧ず
        function updateCalibrationDisplay() {
            if (deviceStatus.calibration) {
                currentCalibration = deviceStatus.calibration;
                // 杩欓噷鍙互娣诲姞鏍″噯鐘舵€佹樉绀洪€昏緫
                console.log('褰撳墠鏍″噯鍙傛暟:', currentCalibration);
            }
        }
        
        // 鍏ㄥ眬鍙橀噺
        let currentCalibration = { offset: 0, scale: 1.0 };



        // 绯荤粺绠＄悊鍔熻兘鍑芥暟

        

        // 鎵撳紑WiFi閰嶇疆椤甸潰

        function openWifiConfig() {

            window.open('wifi_config.html', '_blank');

        }

        

        // 閲嶅惎璁惧

        async function restartDevice() {

            const confirmed = confirm('纭畾瑕侀噸鍚澶囧悧锛熼噸鍚繃绋嬪彲鑳介渶瑕佸嚑鍒嗛挓鏃堕棿銆?);

            if (!confirmed) return;

            

            try {

                const response = await fetch('/restart', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    }

                });

                

                if (response.ok) {

                    alert('璁惧閲嶅惎鍛戒护宸插彂閫侊紝璁惧灏嗗湪鍑犵閽熷悗閲嶅惎銆?);

                    // 鏄剧ず閲嶅惎鎻愮ず

                    showRestartMessage();

                } else {

                    alert('閲嶅惎鍛戒护鍙戦€佸け璐?);

                }

            } catch (error) {

                console.error('閲嶅惎璁惧澶辫触:', error);

                alert('缃戠粶杩炴帴澶辫触锛屾棤娉曢噸鍚澶?);

            }

        }

        

        // 鏄剧ず閲嶅惎鎻愮ず

        function showRestartMessage() {

            const messageDiv = document.createElement('div');

            messageDiv.style.cssText = `

                position: fixed;

                top: 50%;

                left: 50%;

                transform: translate(-50%, -50%);

                background: rgba(0, 0, 0, 0.9);

                color: white;

                padding: 30px;

                border-radius: 15px;

                text-align: center;

                z-index: 1000;

                font-size: 16px;

                max-width: 300px;

            `;

            messageDiv.innerHTML = `

                <div style="font-size: 24px; margin-bottom: 15px;">馃攧</div>

                <div style="font-weight: 600; margin-bottom: 10px;">璁惧姝ｅ湪閲嶅惎</div>

                <div style="font-size: 14px; opacity: 0.8;">

                    璁惧姝ｅ湪閲嶅惎锛岃绛夊緟鍑犲垎閽熷悗閲嶆柊杩炴帴銆?

                </div>

            `;

            document.body.appendChild(messageDiv);

            

            // 5绉掑悗鑷姩鍒锋柊椤甸潰

            setTimeout(() => {

                window.location.reload();

            }, 5000);

        }

        

        // 鎭㈠鍑哄巶璁剧疆

        async function factoryReset() {

            const confirmed = confirm('鈿狅笍 璀﹀憡锛氭鎿嶄綔灏嗘竻闄ゆ墍鏈夎缃苟鎭㈠璁惧鍒板嚭鍘傜姸鎬侊紒\n\n纭畾瑕佺户缁悧锛?);

            if (!confirmed) return;

            

            const password = prompt('璇疯緭鍏ョ鐞嗗憳瀵嗙爜纭鎿嶄綔锛?);

            if (!password) return;

            

            try {

                const response = await fetch('/factoryreset', {

                    method: 'POST',

                    headers: {

                        'Content-Type': 'application/json',

                    },

                    body: JSON.stringify({

                        password: password

                    })

                });

                

                if (response.ok) {

                    alert('璁惧宸叉仮澶嶅嚭鍘傝缃紝绯荤粺灏嗚嚜鍔ㄩ噸鍚€?);

                    // 鏄剧ず鎭㈠鍑哄巶璁剧疆鎻愮ず

                    showFactoryResetMessage();

                } else {

                    alert('鎭㈠鍑哄巶璁剧疆澶辫触锛屽瘑鐮佸彲鑳戒笉姝ｇ‘');

                }

            } catch (error) {

                console.error('鎭㈠鍑哄巶璁剧疆澶辫触:', error);

                alert('缃戠粶杩炴帴澶辫触锛屾棤娉曟仮澶嶅嚭鍘傝缃?);

            }

        }

        

        // 鏄剧ず鎭㈠鍑哄巶璁剧疆鎻愮ず
        function showFactoryResetMessage() {
            const messageDiv = document.createElement('div');
            messageDiv.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: rgba(0, 0, 0, 0.9);
                color: white;
                padding: 30px;
                border-radius: 15px;
                text-align: center;
                z-index: 1000;
                font-size: 16px;
                max-width: 300px;
            `;
            messageDiv.innerHTML = `
                <div style="font-size: 24px; margin-bottom: 15px;">鈿狅笍</div>
                <div style="font-weight: 600; margin-bottom: 10px;">璁惧姝ｅ湪鎭㈠鍑哄巶璁剧疆</div>
                <div style="font-size: 14px; opacity: 0.8;">
                    鎵€鏈夎缃皢琚竻闄わ紝璁惧灏嗛噸鍚苟鎭㈠鍑哄巶鐘舵€併€?
                </div>
            `;
            document.body.appendChild(messageDiv);
            
            // 5绉掑悗鑷姩鍒锋柊椤甸潰
            setTimeout(() => {
                window.location.reload();
            }, 5000);
        }

        // 鍔犵儹鎺у埗鍔熻兘
        let isHeating = false;
        let currentTemperature = 0;
        let targetTemperature = 180;
        let bakingTime = 30;
        let bakingMode = 'standard';
        let controlMode = 'auto'; // 'auto' or 'manual'

        // 鐑樼剻妯″紡棰勮鍙傛暟
        const bakingPresets = {
            'bread': { temperature: 180, time: 30, name: '闈㈠寘' },
            'cake': { temperature: 160, time: 45, name: '铔嬬硶' },
            'pizza': { temperature: 220, time: 15, name: '鎶惃' },
            'cookies': { temperature: 170, time: 20, name: '楗煎共' },
            'roast': { temperature: 200, time: 60, name: '鐑よ倝' },
            'defrost': { temperature: 80, time: 10, name: '瑙ｅ喕' },
            'custom': { temperature: 180, time: 30, name: '鑷畾涔? }
        };

        // 鍒囨崲鍒拌嚜鍔ㄦā寮?
        function switchToAutoMode() {
            controlMode = 'auto';
            
            // 鏇存柊鎸夐挳鐘舵€?
            document.getElementById('auto-mode-btn').classList.add('active');
            document.getElementById('manual-mode-btn').classList.remove('active');
            
            // 鏄剧ず鑷姩妯″紡閮ㄥ垎锛岄殣钘忔墜鍔ㄦā寮忛儴鍒?
            document.getElementById('auto-mode-section').style.display = 'block';
            document.getElementById('manual-mode-section').style.display = 'none';
            
            // 濡傛灉褰撳墠鏄嚜瀹氫箟妯″紡锛屽垏鎹㈠洖鏍囧噯妯″紡
            const modeSelect = document.getElementById('baking-mode-select');
            if (modeSelect.value === 'custom') {
                modeSelect.value = 'bread';
                onBakingModeChange();
            }
            
            showToast('宸插垏鎹㈠埌鑷姩妯″紡');
        }

        // 鍒囨崲鍒版墜鍔ㄦā寮?
        function switchToManualMode() {
            controlMode = 'manual';
            
            // 鏇存柊鎸夐挳鐘舵€?
            document.getElementById('manual-mode-btn').classList.add('active');
            document.getElementById('auto-mode-btn').classList.remove('active');
            
            // 鏄剧ず鎵嬪姩妯″紡閮ㄥ垎锛岄殣钘忚嚜鍔ㄦā寮忛儴鍒?
            document.getElementById('manual-mode-section').style.display = 'block';
            document.getElementById('auto-mode-section').style.display = 'none';
            
            // 璁剧疆鎵嬪姩妯″紡鐨勯粯璁ゅ€硷紙闈為浂鍊硷級
            document.getElementById('target-temp').value = 180;
            document.getElementById('baking-time').value = 30;
            targetTemperature = 180;
            bakingTime = 30;
            
            showToast('宸插垏鎹㈠埌鎵嬪姩妯″紡锛岃璁剧疆娓╁害鍜屾椂闂?);
        }

        // 鐑樼剻妯″紡閫夋嫨鍙樺寲澶勭悊
        function onBakingModeChange() {
            const modeSelect = document.getElementById('baking-mode-select');
            const selectedMode = modeSelect.value;
            const preset = bakingPresets[selectedMode];
            
            if (preset) {
                // 鏇存柊娓╁害鍜屾椂闂磋緭鍏ユ
                document.getElementById('target-temp').value = preset.temperature;
                document.getElementById('baking-time').value = preset.time;
                
                // 鏇存柊鍏ㄥ眬鍙橀噺
                targetTemperature = preset.temperature;
                bakingTime = preset.time;
                bakingMode = selectedMode;
                
                if (selectedMode === 'custom') {
                    showToast('宸插垏鎹㈠埌鑷畾涔夋ā寮忥紝鎮ㄥ彲浠ユ墜鍔ㄨ皟鏁存俯搴﹀拰鏃堕棿');
                } else {
                    showToast(`宸插垏鎹㈠埌${preset.name}妯″紡锛?{preset.temperature}掳C锛?{preset.time}鍒嗛挓`);
                }
            }
        }

        // 娓╁害杈撳叆楠岃瘉
        function validateTemperature() {
            const tempInput = document.getElementById('target-temp');
            const temp = parseInt(tempInput.value);
            
            if (temp >= 50 && temp <= 250) {
                targetTemperature = temp;
                // 鍙湁鍦ㄨ嚜鍔ㄦā寮忎笅鎵嬪姩璋冩暣鏃舵墠鍒囨崲鍒拌嚜瀹氫箟妯″紡
                if (controlMode === 'auto') {
                    bakingMode = 'custom'; // 鎵嬪姩璋冩暣鏃跺垏鎹㈠埌鑷畾涔夋ā寮?
                    document.getElementById('baking-mode-select').value = 'custom';
                }
                return true;
            } else {
                showToast('娓╁害鑼冨洿搴斾负 50-250掳C');
                tempInput.value = targetTemperature; // 鎭㈠鍘熷€?
                return false;
            }
        }

        // 鏃堕棿杈撳叆楠岃瘉
        function validateTime() {
            const timeInput = document.getElementById('baking-time');
            const time = parseInt(timeInput.value);
            
            if (time >= 1 && time <= 120) {
                bakingTime = time;
                // 鍙湁鍦ㄨ嚜鍔ㄦā寮忎笅鎵嬪姩璋冩暣鏃舵墠鍒囨崲鍒拌嚜瀹氫箟妯″紡
                if (controlMode === 'auto') {
                    bakingMode = 'custom'; // 鎵嬪姩璋冩暣鏃跺垏鎹㈠埌鑷畾涔夋ā寮?
                    document.getElementById('baking-mode-select').value = 'custom';
                }
                return true;
            } else {
                showToast('鏃堕棿鑼冨洿搴斾负 1-120 鍒嗛挓');
                timeInput.value = bakingTime; // 鎭㈠鍘熷€?
                return false;
            }
        }

        // 娓╁害杈撳叆妗嗗け鍘荤劍鐐规椂楠岃瘉
        function onTemperatureBlur() {
            validateTemperature();
        }

        // 鏃堕棿杈撳叆妗嗗け鍘荤劍鐐规椂楠岃瘉
        function onTimeBlur() {
            validateTime();
        }

        // 褰撳湪鎵嬪姩妯″紡涓嬫洿鏀规俯搴︽椂鐨勫鐞?
        function onManualTemperatureChange(element) {
            // 鍙湁鍦ㄦ墜鍔ㄦā寮忎笅鎵嶆洿鏂版俯搴﹀€?
            if (controlMode === 'manual') {
                targetTemperature = parseInt(element.value) || 0;
            } else if (controlMode === 'auto') {
                // 鍦ㄨ嚜鍔ㄦā寮忎笅锛屽鏋滅敤鎴蜂慨鏀逛簡棰勮鍊硷紝鍒欒嚜鍔ㄥ垏鎹㈠埌鑷畾涔夋ā寮?
                const modeSelect = document.getElementById('baking-mode-select');
                if (modeSelect.value !== 'custom') {
                    modeSelect.value = 'custom';
                    onBakingModeChange();
                }
                targetTemperature = parseInt(element.value) || 0;
            }
        }

        // 褰撳湪鎵嬪姩妯″紡涓嬫洿鏀规椂闂存椂鐨勫鐞?
        function onManualTimeChange(element) {
            // 鍙湁鍦ㄦ墜鍔ㄦā寮忎笅鎵嶆洿鏂版椂闂村€?
            if (controlMode === 'manual') {
                bakingTime = parseInt(element.value) || 0;
            } else if (controlMode === 'auto') {
                // 鍦ㄨ嚜鍔ㄦā寮忎笅锛屽鏋滅敤鎴蜂慨鏀逛簡棰勮鍊硷紝鍒欒嚜鍔ㄥ垏鎹㈠埌鑷畾涔夋ā寮?
                const modeSelect = document.getElementById('baking-mode-select');
                if (modeSelect.value !== 'custom') {
                    modeSelect.value = 'custom';
                    onBakingModeChange();
                }
                bakingTime = parseInt(element.value) || 0;
            }
        }

        // 鎵嬪姩妯″紡涓嬫俯搴﹁緭鍏ユ澶卞幓鐒︾偣鏃剁殑澶勭悊
        function onManualTemperatureBlur() {
            if (controlMode === 'manual') {
                validateTemperature();
            }
        }

        // 鎵嬪姩妯″紡涓嬫椂闂磋緭鍏ユ澶卞幓鐒︾偣鏃剁殑澶勭悊
        function onManualTimeBlur() {
            if (controlMode === 'manual') {
                validateTime();
            }
        }

        function toggleHeating() {
            const toggleBtn = document.getElementById('heating-toggle');
            const heatingIcon = toggleBtn.querySelector('.heating-icon');
            const heatingText = toggleBtn.querySelector('.heating-text');
            
            isHeating = !isHeating;
            
            if (isHeating) {
                toggleBtn.style.background = 'linear-gradient(135deg, #10b981, #059669)';
                heatingIcon.textContent = '鉂勶笍';
                heatingText.textContent = '鍋滄鍔犵儹';
                
                // 鏍规嵁褰撳墠妯″紡鏄剧ず涓嶅悓鐨勬彁绀轰俊鎭?
                if (controlMode === 'manual') {
                    showToast(`寮€濮嬫墜鍔ㄥ姞鐑埌 ${targetTemperature}掳C锛屾寔缁?${bakingTime} 鍒嗛挓`);
                } else {
                    const modeSelect = document.getElementById('baking-mode-select');
                    const selectedMode = modeSelect.value;
                    const preset = bakingPresets[selectedMode];
                    if (preset) {
                        showToast(`寮€濮嬪姞鐑埌 ${targetTemperature}掳C锛屾寔缁?${bakingTime} 鍒嗛挓 (${preset.name}妯″紡)`);
                    } else {
                        showToast(`寮€濮嬪姞鐑埌 ${targetTemperature}掳C锛屾寔缁?${bakingTime} 鍒嗛挓`);
                    }
                }
                // 杩欓噷搴旇鍙戦€佸惎鍔ㄥ姞鐑殑璇锋眰鍒拌澶?
                // startHeating(targetTemperature, bakingTime, bakingMode);
            } else {
                toggleBtn.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                heatingIcon.textContent = '馃敟';
                heatingText.textContent = '鍚姩鍔犵儹';
                showToast('鍔犵儹宸插仠姝?);
                // 杩欓噷搴旇鍙戦€佸仠姝㈠姞鐑殑璇锋眰鍒拌澶?
                // stopHeating();
            }
        }

        // 绉诲姩绔紭鍖栧姛鑳?
        
        // 閫€鍑虹櫥褰?
        async function logout() {
            if (confirm('纭畾瑕侀€€鍑虹櫥褰曞悧锛?)) {
                try {
                    const response = await fetch('/logout', {
                        method: 'POST'
                    });
                    
                    if (response.ok) {
                        window.location.href = '/login';
                    } else {
                        alert('閫€鍑虹櫥褰曞け璐?);
                    }
                } catch (error) {
                    console.error('閫€鍑虹櫥褰曞け璐?', error);
                    alert('缃戠粶杩炴帴澶辫触');
                }
            }
        }
        
        // 淇敼瀵嗙爜
        async function changePassword() {
            const oldPassword = prompt('璇疯緭鍏ュ綋鍓嶅瘑鐮侊細');
            if (!oldPassword) return;

            const newPassword = prompt('璇疯緭鍏ユ柊瀵嗙爜锛?);
            if (!newPassword) return;

            const confirmPassword = prompt('璇风‘璁ゆ柊瀵嗙爜锛?);
            if (!confirmPassword) return;

            if (newPassword !== confirmPassword) {
                alert('鏂板瘑鐮佽緭鍏ヤ笉涓€鑷?);
                return;
            }

            try {
                const response = await fetch('/changepassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        old_password: oldPassword,
                        new_password: newPassword
                    })
                });

                if (response.ok) {
                    alert('瀵嗙爜淇敼鎴愬姛');
                } else {
                    alert('瀵嗙爜淇敼澶辫触锛岃妫€鏌ュ綋鍓嶅瘑鐮佹槸鍚︽纭?);
                }
            } catch (error) {
                console.error('淇敼瀵嗙爜澶辫触:', error);
                alert('缃戠粶杩炴帴澶辫触');
            }
        }

        
        
        // 绉诲姩绔Е鎽镐簨浠跺鐞?
        let touchStartX = 0;
        let touchStartY = 0;
        
        document.addEventListener('touchstart', function(e) {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        }, { passive: true });
        
        document.addEventListener('touchend', function(e) {
            const touchEndX = e.changedTouches[0].clientX;
            const touchEndY = e.changedTouches[0].clientY;
            
            const deltaX = touchEndX - touchStartX;
            const deltaY = touchEndY - touchStartY;
            
            // 姘村钩婊戝姩瓒呰繃50px涓斿瀭鐩存粦鍔ㄥ皬浜?0px鏃惰Е鍙戝埛鏂?
            if (Math.abs(deltaX) > 50 && Math.abs(deltaY) < 30) {
                if (deltaX > 0) {
                    // 鍚戝彸婊戝姩 - 鍒锋柊鏁版嵁
                    refreshData();
                    showToast('鏁版嵁宸插埛鏂?);
                }
            }
        }, { passive: true });
        
        // 鏄剧ずToast鎻愮ず
        function showToast(message) {
            const toast = document.createElement('div');
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 12px 24px;
                border-radius: 25px;
                font-size: 14px;
                z-index: 1000;
                animation: slideDown 0.3s ease;
            `;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 2000);
        }
        
        // 娣诲姞CSS鍔ㄧ敾
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideDown {
                from {
                    transform: translateX(-50%) translateY(-20px);
                    opacity: 0;
                }
                to {
                    transform: translateX(-50%) translateY(0);
                    opacity: 1;
                }
            }

            @keyframes highlight {
                0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
                50% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
                100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
            }
            
            /* 绉诲姩绔寜閽偣鍑绘晥鏋?*/
            .control-btn:active, .nav-card:active {
                transform: scale(0.95);
                transition: transform 0.1s;
            }
            
            /* 绉诲姩绔紭鍖栨粴鍔?*/
            body {
                -webkit-overflow-scrolling: touch;
            }
        `;
        document.head.appendChild(style);

    </script>

</body>

</html>
