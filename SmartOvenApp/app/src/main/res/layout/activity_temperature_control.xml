<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="智能烤箱温度控制"
        android:textSize="24sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 当前温度显示 -->
    <TextView
        android:id="@+id/current_temp_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前温度: --°C"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/temp_display_bg"
        android:padding="12dp" />

    <!-- 目标温度显示 -->
    <TextView
        android:id="@+id/target_temp_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目标温度: 180.0°C"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 温度输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/temperature_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入目标温度 (0-300°C)"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg" />

        <Button
            android:id="@+id/set_temperature_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_primary" />

    </LinearLayout>

    <!-- 温度调节按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/decrease_temp_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-5°C"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_secondary" />

        <Button
            android:id="@+id/increase_temp_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+5°C"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_secondary" />

    </LinearLayout>

    <!-- 加热控制按钮 -->
    <Button
        android:id="@+id/toggle_heating_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始加热"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_primary" />

    <!-- 校准功能入口 -->
    <Button
        android:id="@+id/calibration_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温度校准"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/button_outline"
        android:textColor="@color/primary" />

</LinearLayout>