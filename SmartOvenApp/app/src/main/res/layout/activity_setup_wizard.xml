<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="智能烤箱配网向导"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在扫描设备..."
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#e8f4fd"
            android:textStyle="italic" />

        <!-- WiFi配置区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi配置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- WiFi名称 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi名称 (SSID)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/ssidEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的WiFi名称"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- WiFi密码 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi密码"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入WiFi密码"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 设备IP地址 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备IP地址"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/deviceIpEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自动扫描或手动输入设备IP"
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 扫描按钮 -->
        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新扫描设备"
            android:textColor="#ffffff"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="8dp" />

        <!-- 连接按钮 -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置设备"
            android:textColor="#ffffff"
            android:background="@drawable/button_success"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <!-- 手动设置按钮 -->
        <Button
            android:id="@+id/manualSetupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳过配网，手动设置"
            android:textColor="#666666"
            android:background="@drawable/button_secondary"
            android:layout_marginBottom="8dp" />

        <!-- 说明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配网说明：\n1. 确保设备处于配网模式（指示灯闪烁）\n2. 确保设备和手机连接同一WiFi网络\n3. 扫描设备后输入WiFi信息进行配置\n4. 配置成功后设备将自动重启并连接到新网络"
            android:textSize="12sp"
            android:textColor="#999999"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="#f8f8f8" />

    </LinearLayout>

</ScrollView>